<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >
    
    <com.infinity.utils.OnlineImageView android:id="@+id/chat_message_avatar_remote"
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_centerInParent="true" />
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/chat_message_contact_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone" />
		<LinearLayout android:id="@+id/chat_message_container_view_remote"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/message_container_background_remote"
		    android:orientation="vertical"
		    android:padding="11dp"
		    android:clickable="true" />
	</LinearLayout>

</LinearLayout>

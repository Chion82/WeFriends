package com.infinity.wefriends;

import com.infinity.wefriends.apis.Users;

import android.content.Context;
import android.content.Intent;

public class AsyncConnTask {
	Users users = null;
	Context m_context = null;
	
	public AsyncConnTask(Context context) {
		m_context = context;
		users = new Users(context);
	}
	
	protected class initUserCheckThread extends Thread {
		protected Context m_context = null;
		
		public initUserCheckThread(Context context) {
			m_context = context;
		}
		
		@Override
		public void run() {
			if (users.authenticateCachedAccessToken()!=Users.TOKEN_VALID) {
				Intent intent = new Intent();
				intent.setClass(m_context,LoginActivity.class);
				m_context.startActivity(intent);
			}
			
			
			super.run();
		}
		
	}

}

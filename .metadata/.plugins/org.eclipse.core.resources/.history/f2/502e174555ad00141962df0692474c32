package com.example.hello;

import android.content.Context;
import android.util.AttributeSet;
import android.view.LayoutInflater;
import android.widget.LinearLayout;
import android.widget.TextView;
import android.widget.ImageView;

public class ListItemWidget extends LinearLayout {
	
	protected Context m_context = null;

	public ListItemWidget(Context context) {
		super(context);
		m_context = context;
		createView();
	}
	
	public ListItemWidget(Context context, AttributeSet attrs)
	{
		super(context,attrs);
		m_context = context;
		createView();
	}
	
	protected void createView()
	{
		LayoutInflater.from(m_context).inflate(R.layout.listwidget, this, true);
	}

	public void setData(String str, int img)
	{
		((TextView)findViewById(R.id.listText)).setText(str);
		((ImageView)findViewById(R.id.listImg)).setImageResource(img);
	}
}
